<h1>
   Application Name:  <%= @app.name %>
</h1>

<div class="row">
  <div class="col-12 col-md-3">
    <%= render partial: 'chats' %>
  </div>
</div>

<div class="d-none" data-role="message-template">
  <div class="chat-message-container">
    <div class="row no-gutters">
      <div class="col-auto text-center">
        <img src="" class="avatar" alt="" data-role="user-avatar">
      </div>

      <div class="col">
        <div class="message-content">
          <p class="mb-1" data-role="message-text">

          </p>

          <div class="text-right">
            <small data-role="message-date">
            </small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    
    
 <% if @current_chats.present?  %>
      <%= link_to @current_chats.last.name, room_path(@current_chats.last), class: 'nav-link room-nav-link' %>
 <% end %>       

    
    