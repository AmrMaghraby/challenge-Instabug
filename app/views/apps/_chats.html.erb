<h3 class="text-muted mb-0">
  Chats
</h3>

<hr class="mt-1">
    
  <nav class="nav flex-column">
        <%= simple_form_for @app, :method => :get do |form| %>
          <p>
            <%= text_field_tag :chatsearch, params[:chatsearch] %>
            <%= submit_tag "Search", :name => nil %>
        </p>         
     <% end %>
  </nav>
  
<div class="mt-3">

  <%= simple_form_for @app, :url => new_room_path, :method => :get do |form| %>
      <%= form.input :id , as: :hidden %>
      <%= form.submit "Create a chat", class: 'btn btn-success' %>
  <% end %>



</div>

